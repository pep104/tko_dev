<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <!--        <item name="android:background">@drawable/selector_button_red</item>-->
        <item name="android:backgroundTint">@color/selector_button_primary_colors</item>
        <item name="android:textColor">@color/selector_button_primary_text_color</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="ButtonLight" parent="Widget.MaterialComponents.Button">
        <!--        <item name="android:background">@drawable/selector_button_red</item>-->
        <item name="android:backgroundTint">@color/selector_button_light_colors</item>
        <item name="android:textColor">@color/selector_button_light_text_color</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">#08366D</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonLeftDrawable" parent="ButtonLight">
        <item name="android:gravity">left|center_vertical</item>
        <item name="iconPadding">16dp</item>
    </style>

    <style name="TextButtonWithIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/selector_button_light_text_color</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/selector_button_transparent</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">2dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">@color/greyRipple</item>
    </style>

    <style name="ActivityMenuButtonWithIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/selector_button_activity_menu_text_color</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextHintLogin">
        <item name="android:textColor">@color/textBlackA60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextMain">
        <item name="android:textColorHint">#33000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextAuth" parent="EditTextMain">
        <item name="android:textColor">@color/selector_edittext_auth</item>
    </style>

    <style name="EditTextContainer" parent="EditTextMain">
        <item name="android:textColor">@color/selector_edittext_container</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextSearch" parent="EditTextMain">
        <item name="android:textColor">@color/selector_edittext_container</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextBottomSheetPrimaryHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextBottomSheetSecondaryHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextInfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextListHeader">
        <item name="android:textColor">@color/veryBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextListMessage">
        <item name="android:textColor">@color/textBlackA60</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAddressHeaders">
        <item name="android:textColor">#66000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextHintContainerEdit">
        <item name="android:textColor">@color/textBlackA60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextDialogHeader">
        <item name="android:textColor">@color/textBlackA40</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppBarIconStyle">
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">56dp</item>

    </style>

    <style name="CardViewWhite8">
        <item name="cardCornerRadius">@dimen/round_address_cards</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
    </style>

    <style name="TextRouteListName">
        <item name="android:textColor">@color/blueMain</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextRouteListInfo">
        <item name="android:textColor">@color/textBlackA60</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRouteBadgeDefault">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/blueMain</item>
    </style>

    <style name="TextRoutePointNameDefault">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextRoutePointInfoDefault">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlackA60</item>
    </style>

    <style name="TextRouteBadgePending">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextRoutePointNamePending">
        <item name="android:textColor">@color/blueMain</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextRoutePointInfoPending">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blueMain</item>
    </style>

    <style name="TextRouteBadgeCompleted">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextRoutePointNameCompleted">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextRoutePointInfoCompleted">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="FrameLayoutLoading">
        <item name="android:background">@color/loadingBackgroundFill</item>
        <item name="android:elevation">14dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
